@model IEnumerable<EventEase.Models.Booking>

<h2>Bookings</h2>
<p><a asp-action="Create" class="btn btn-primary">Create Booking</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Event</th>
            <th>Venue</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingId</td>
                <td>@booking.Event?.EventName</td>
                <td>@booking.Venue?.VenueName</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
