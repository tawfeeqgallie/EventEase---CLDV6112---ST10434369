@model IEnumerable<EventEase.Models.Event>

<h2>Events</h2>
<p><a asp-action="Create" class="btn btn-primary">Add New Event</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start</th>
            <th>End</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td><img src="@item.ImageUrl" width="100" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
