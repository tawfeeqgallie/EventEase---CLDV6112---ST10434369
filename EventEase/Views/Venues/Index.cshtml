@model IEnumerable<EventEase.Models.Venue>

<h2>Venues</h2>
<p><a asp-action="Create" class="btn btn-primary">Add New Venue</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VenueName</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td><img src="@item.ImageUrl" width="100" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
